<% if flash.has?(:notice) %>
  <%= flash[:notice] %>
<% end %>
<h1>Edit Your Profile</h1>
<form action="/users/<%=@user.slug%>" method="POST">
<input id="hidden" type="hidden" name="_method" value="PATCH">

  <label for="User">Username:</label>
  <br>
  <input id="Name" type="text" name="user[name]" value="<%=@user.name%>">

  <h3>Change E-mail</h3>
    <label>E-mail Address:</label>
    <br>
    <input  id="Email Address" type="email" name="user[email]" value="<%=@user.email%>"></input>
  <br>

  <h3>Change Password</h3>
    <label>Old Password:</label>
    <br>
    <input  id="old_password" type="password" name="password[old_password]"></input>
    <br>
    <label>New Password:</label>
    <br>
    <input  id="new_password" type="password" name="password[new_password]"></input>
  <br>
   <br>

   <input type="submit" value="Save">
</form>